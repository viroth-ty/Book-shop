<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BookStore" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#BAA786</item>
        <item name="colorPrimaryVariant">@color/nashville</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowFullscreen">false</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="itemRippleColor">?attr/colorPrimary</item>
        <item name="tabRippleColor">?attr/colorPrimary</item>
    </style>

    <style name="Style.App.CornerSize" parent="">
        <item name="cornerSize">6%</item>
    </style>

    <style name="Style.App.ImageButton" parent="">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentDescription">@null</item>
    </style>

    <style name="Style.App.ToolbarTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>