<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BookStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#BAA786</item>
        <item name="colorPrimaryVariant">@color/nashville</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowFullscreen">false</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="itemRippleColor">?attr/colorPrimary</item>
        <item name="tabRippleColor">?attr/colorPrimary</item>
        <item name="toolbarStyle">@style/Style.App.Toolbar</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="Style.App.CornerSize" parent="">
        <item name="cornerSize">6%</item>
    </style>

    <style name="Style.App.Toolbar" parent="">
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Style.App.ImageButton" parent="">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentDescription">@null</item>
    </style>

    <style name="Style.App.ToolbarTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Style.App.H3" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Style.App.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/item_card_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/item_card_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/item_card_corner</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/item_card_corner</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="placeholderText">@string/search</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <dimen name="item_card_corner">4dp</dimen>

</resources>